/* pages/bookDetail/bookDetail.wxss */
page{
  width:98%;
  margin: 0px auto;
}
.infos{
  margin-top:10rpx;
  width:100%;
  height: 400rpx;
  display: flex;
}
.book-coverimg{
  width:300rpx;
  height:400rpx;
  background: gray;
}
.book-info{
  padding-left: 30rpx;
  width:430rpx;
}
.book-author{
  display: block;
}
.book-cover{
  width:300rpx;
  height:400rpx;
}
.book-name{
  font-size:40rpx;
  width:100rpx;
}
.book-brief{
  font-size: 27rpx;
}
.book-type , .up-time, .news{
  font-size: 30rpx;
  margin-top:5px;
  display: block;
}
.chapter{
  border:1px solid rosybrown;
  padding:2px 0px;
  display: block;
}
.hover-chapter{
  color:gray;
}